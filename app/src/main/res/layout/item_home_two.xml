<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:weightSum="7"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/avatar_user"
                    android:layout_weight="0"
                    app:siBorderWidth="2dp"
                    app:siBorderColor="#dedede"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/user"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="7.0"
                    android:gravity="center_vertical"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:id="@+id/user_name"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2b2b2b"
                        android:text="Admin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_centerVertical="true"
                            android:id="@+id/publica"
                            android:src="@drawable/ic_public"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_toRightOf="@+id/publica"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="3dp"
                            android:id="@+id/time"
                            android:textSize="12sp"
                            android:text="17/08/2017"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                </LinearLayout>
                <ImageView
                    android:padding="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0"
                    android:src="@drawable/ic_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <View
                android:layout_marginBottom="0dp"
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/item_content"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:adjustViewBounds="true"
                        android:id="@+id/item_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp">
                    </ImageView>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_location_on_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_destination_home"
                        android:layout_marginTop="10dp"
                        android:text="SApa "
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="3dp"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#d65ac0cc"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:text="yeah"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="left"
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/textSecond"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="1dp"
                android:background="#c9c9c9"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:paddingLeft="10dp"
                android:weightSum="4"
                android:layout_gravity="bottom|left"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ic_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:src="@drawable/ic_like" />
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#b7000000"
                        android:id="@+id/tv_like"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:id="@+id/chat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="3dp"
                        android:id="@+id/ic_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:src="@drawable/ic_chat" />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="#b7000000"
                        android:id="@+id/count_comment"
                        android:text="0 "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:id="@+id/share_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginTop="2dp"
                        android:id="@+id/iv_share_facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:src="@drawable/ic_share_white_24dp" />
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#b7000000"
                        android:text="Share "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="9dp"
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ic_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:src="@drawable/ic_map" />
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#b7000000"
                        android:text="Bản đồ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>